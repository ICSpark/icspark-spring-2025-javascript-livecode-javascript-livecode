{
  "name": "icspark-webdev-env",
  "image": "debian:bookworm-slim",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "forwardPorts": [3000],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.live-preview"
      ]
    }
  },
  "portsAttributes": {
    "3000": {
      "label": "Live Preview"
    }
  },
  "postAttachCommand": ". .devcontainer/welcome.sh"
}
